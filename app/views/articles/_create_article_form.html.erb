<div class="tab-pane fade overflow" id="edit" role="tabpanel" aria-labelledby="edit-tab">
<div class="row" style="padding-top:5%;">
<div class="col"></div>
<div class="col-md-7">

<h1>Add a New Lesson!</h1>

<%= form_for :article, url: articles_path, remote: true do |f| %>
<div class="field" style="100%;" >
  <!-- Errors Checking Code  -->
  <% if @article.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "error") %>
        prohibited this article from being saved: 
      </h2> 
      <p>
        <ul>
          <% @article.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
          <% end %>
        </ul>
      </p>
    </div>
  <% end %>

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control' %>
  </p>
  <p>
    <%= f.label :text %><br>
    <%= f.text_area :text, class: 'form-control' %>
  </p>
  <p>
    <%= f.submit class: 'btn btn-lg btn-success'%>
  </p>
</div>  <!-- field -->
<% end %>

</div> <!-- .col-md-7 -->
<div class="col"></div>
</div> <!-- .row -->
</div>