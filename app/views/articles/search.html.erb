<div class="row">
<div class="col"></div>
<div class="col-md-10">

<h1> List of Articles Matching Your Search words</h1>
<table class="table table-hover table-striped table-responsive-xs">
	<thead>
	<tr>
		<th>Title</th>
		<th>Text</th>
		<% if current_user && current_user.admin? %>
			<th colspan = "3">Editing Options</th>
		<% else %>
			<th colspan = "1">Show Article</th>
		<% end %>
	</tr>
	</thead>

	<tbody>
	<% @articles.each do |article| %> 
		<tr>
			<td>
				<%= article.title %> 
			</td>
			<td>
				 <%= truncate(article.text, length: 75) %>
			</td>
			<td> 
				<%= link_to 'Show', article_path(article), class: 'btn btn-sm btn-info' %>
			</td>
			<% if current_user && current_user.admin? %>
				<td> 
					<%= link_to 'Edit', edit_article_path(article), class: 'btn btn-sm btn-warning' %>
				</td>
				<td> 
					<%= link_to 'Delete', article_path(article), 
						class: 'btn btn-sm btn-danger',
						method: :Delete, 
						data: {confirm: 'Are you certain???'}  %>
				</td>
			<% end %>
		</tr>
	<% end %>
	</tbody>
</table>

<p><%= link_to 'Back to all Articles', articles_path, class: 'btn btn-md btn-primary' %></p>

</div> <!-- .col-md-10 -->
<div class="col"></div>
</div> <!-- .row -->